{
  "compilerOptions": {
    "declaration": true,            // 生成声明文件
    "declarationDir": "./dist",     // 声明文件输出目录
    "outDir": "./dist",             // JS 输出目录
    "jsx": "react",                 // 配置 JSX 支持
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
